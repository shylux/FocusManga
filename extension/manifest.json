{
  "name": "FocusManga",
  "version": "0.9",
  "manifest_version": 2,

  "description": "Adds diashow function to online manga sites.",
  "icons": {"128": "img/slideshow.png"},

  "permissions": [
    "tabs",
    "*://*.mangapanda.com/*/*",
    "*://*.onepiece-tube.tv/*",
    "*://*.naruto-tube.com/*",
    "*://*.fairytail-tube.com/*",
    "*://*.batoto.net/read/*",
    "*://*.mangafox.me/manga/*/*/*",
    "*://*.mangareader.net/*/*",
    "*://*.mangainn.com/manga/chapter/*",
    "*://*.goodmanga.net/*/chapter/*",
    "*://*.mangastream.to/*",
    "*://*.manga.animea.net/*",
    "*://*.mangaeden.com/*/*/*/*",
    "*://*.perveden.com/*/*/*/*",
    "*://*.mangahere.com/manga/*/*/*",
    "*://*.hbrowse.com/*/*"
  ],

  "options_page": "options.html",
  "background": {
    "scripts": ["option_storage.js", "background.js"],
    "persistent": true
  },

  "page_action": {
    "default_title": "Start/Stop FocusManga",
    "default_icon": "img/slideshow.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.mangapanda.com/*/*",
        "*://*.onepiece-tube.tv/*",
        "*://*.naruto-tube.com/*",
        "*://*.fairytail-tube.com/*",
        "*://*.batoto.net/read/*",
        "*://*.mangafox.me/manga/*/*/*",
        "*://*.mangareader.net/*/*",
        "*://*.mangainn.com/manga/chapter/*",
        "*://*.goodmanga.net/*/chapter/*",
        "*://*.mangastream.to/*",
        "*://*.manga.animea.net/*",
        "*://*.mangaeden.com/*/*/*/*",
        "*://*.perveden.com/*/*/*/*",
        "*://*.mangahere.com/manga/*/*/*",
        "*://*.hbrowse.com/*/*"
      ],
      "js": ["lib/jquery.js", "timer.js", "option_storage.js", "focus.js", "hoster.js", "online.js", "cleanup.js"],
      "css": ["hide.css", "focus.css"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "img/close-circle.png",
    "img/play.png",
    "img/stop.png",
    "img/options.png"
  ]
}
